<h1>Add a new figure </h1>
<form action='/figures' method="POST">
  <p><label>Name: </label><input type="text" name="figure[name]" id="figure_name"></p>

  <p><label>Title: </label>
    <%@titles.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
    <%end%>

    <p><label>and/or, create a new title:</label>
    <br>
    <label>Name:</label><input type="text" name="title[name]" id="new_title"></input>
    <br>

  <p><label>Landmarks: </label>
    <%@landmarks.each do |landmark|%>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
    <%end%>

    <p><label>and/or, create a new landmark:</label>
    <br>
    <label>Name:</label><input type="text" name="landmark[name]" id="new_landmark"></input><br>
    <label>Year built:</label><input type="text" name="landmark[year_completed]"></input>
    <br>


  <p><input type="submit" value="Create New Figure"></p>
</form>
